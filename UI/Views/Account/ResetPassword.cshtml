@model Models.ViewModels.ResetPasswordViewModel
@{
}
@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post))
{

        <div asp-validation-summary="All" class="text-danger"></div>
        <input asp-for="Id" value="@ViewBag.Id" type="hidden"/>
        <div class="form-field">
            <label asp-for="Password" for="exampleInputEmail1" class="form-label"></label>
            <input asp-for="Password" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
        </div>
        <div class="form-field">
            <label asp-for="PasswordConfirm" for="exampleInputEmail1" class="form-label"></label>
            <input asp-for="PasswordConfirm" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
        </div>
        <div class="form-field">
            <button type="submit" class="btn btn-primary">@SharedLocalizer["SubmitButtonInForm"]</button>
        </div>
}
